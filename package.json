{
  "name": "romichan",
  "description": "A blog system built with Angular and Rust",
  "version": "1.0.0",
  "license": "BAN-ZHINESE-USING",
  "author": "Romi <me@hotaru.icu>",
  "scripts": {
    "ng": "ng",
    "start": "python scripts/prebuild.py && ng serve --host 0.0.0.0 --disable-host-check",
    "dev": "python scripts/dev.py",
    "ui": "cd ui && pnpm dev",
    "build": "cargo test export_bindings && python scripts/prebuild.py && cd ui && pnpm build && ng build",
    "watch": "ng build --watch --configuration development",
    "unocss:dev": "unocss --watch",
    "test": "ng test",
    "serve": "node dist/server/server.mjs"
  },
  "browser": {
    "node:fs": false,
    "node:path": false
  },
  "keywords": [
    "blog",
    "rust",
    "angular",
    "rust",
    "full-stack",
    "web",
    "frontend",
    "backend"
  ],
  "bugs": {
    "url": "https://github.com/biyuehu/romi-blog/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/biyuehu/romi-blog.git"
  },
  "dependencies": {
    "@angular/animations": "^19.2.16",
    "@angular/common": "^19.2.16",
    "@angular/compiler": "^19.2.16",
    "@angular/core": "^19.2.16",
    "@angular/forms": "^19.2.16",
    "@angular/platform-browser": "^19.2.16",
    "@angular/platform-browser-dynamic": "^19.2.16",
    "@angular/platform-server": "^19.2.16",
    "@angular/router": "^19.2.16",
    "@angular/ssr": "^19.2.19",
    "@kotori-bot/logger": "^1.3.4",
    "express": "^4.21.2",
    "jwt-decode": "^4.0.0",
    "markdown-it": "^14.1.0",
    "rxjs": "~7.8.0",
    "shiki": "^1.24.2",
    "ts-adt": "^2.1.2",
    "ts-pattern": "^5.9.0",
    "tslib": "^2.3.0",
    "vditor": "^3.10.8",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.19",
    "@angular/cli": "^19.2.19",
    "@angular/compiler-cli": "^19.2.16",
    "@biomejs/biome": "^2.3.2",
    "@iconify-json/mdi": "^1.2.3",
    "@types/express": "^5.0.0",
    "@types/jasmine": "~5.1.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^18.18.0",
    "@unocss/cli": "^65.4.0",
    "@unocss/preset-icons": "^65.4.3",
    "axios": "^1.9.0",
    "conventional-changelog-cli": "^4.1.0",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "p-limit": "^6.2.0",
    "typescript": "~5.9.3",
    "unocss": "^0.64.1"
  }
}
